<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"

    android:paddingTop="5dip"
    android:paddingBottom="5dip"
    android:paddingRight="16dip"
    android:paddingLeft="16dip">

    <!-- <TextView
         android:id="@+id/text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="#222222"
         android:textSize="16sp"
         tools:text="Text Line Item" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <fourever.textile.miscs.RoundedImageView
            android:id="@+id/noti_user_pic"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_weight="20"
            android:src="@drawable/maleuser" />

        <fourever.textile.miscs.RoundedImageView
            android:id="@+id/default_img"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_weight="20"
            android:visibility="gone"
            android:src="@drawable/maleuser" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/post_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/post_user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/noti_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="Akhil Batlawala"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/time"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/noti_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="17 Jan 2016 at 14:20"
                            android:textColor="@color/ltgrey"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>


                <TextView
                    android:id="@+id/noti_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="80"
                    android:gravity="center_vertical|right"
                    android:text="12-22-12"
                    android:textColor="@color/primaryColorDark"
                    android:textSize="10sp" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>