<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000">

    <RelativeLayout
        android:id="@+id/main_unfollowdialog_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:foregroundGravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D9FFFFFF"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <fourever.textile.miscs.RoundedImageView
                    android:id="@+id/peopleimg"
                    android:layout_width="90dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/unfollows"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingRight="5dp"
                        android:text="Unfollow"
                        android:textColor="#ffff4444"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/people_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Akhil Batlawala"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:typeface="sans" />
                </LinearLayout>


                <!-- <Button
                     android:layout_width="wrap_content"
                     android:background="@drawable/follow_button"
                     android:layout_height="wrap_content"
                     android:text="Follow" />-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/unfollow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/squarebutton_with_border"
                        android:minHeight="40dp"
                        android:paddingBottom="-5dp"
                        android:paddingTop="-5dp"
                        android:text="unfollow"
                        android:textColor="#ffff4444"
                        android:textSize="14dp" />

                    <Button
                        android:id="@+id/cancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/squarebutton_with_border"
                        android:minHeight="40dp"
                        android:text="Cancel"
                        android:textColor="@color/ColorPrimary"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</FrameLayout>